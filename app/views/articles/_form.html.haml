= form_for @article, :html => {:multipart => true} do |f|
  - if @article.errors.any?
    #error_explanation
      %h2= pluralize(@article.errors.count, "error") + ' prohibited this article from being saved:'
      %ul
        - @article.errors.full_messages.each do |msg|
          %li= msg

  .field
    =f.lable :title %br
    =f.text_field :title

  .field
    =f.lable :article_attachment%br
    =f.file_field :article_attachment
    =f.hidden_field :article_attachment_cache

  .actions
    =f.submit

